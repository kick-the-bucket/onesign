<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for our project.</description>
    <rule ref="PSR2"/>

    <!-- Check for cross-version support for PHP 7.4 and higher. -->
    <config name="testVersion" value="7.4-"/>
    <rule ref="./vendor-bin/php_codesniffer/vendor/phpcompatibility/php-compatibility/PHPCompatibility"/>
    <rule ref="PHPCompatibility.Keywords.ForbiddenNamesAsDeclared.resourceFound">
        <exclude-pattern>tests/Resource.php</exclude-pattern>
    </rule>

    <file>src</file>
    <file>tests</file>

    <!-- Show progression -->
    <arg value="p"/>
</ruleset>
